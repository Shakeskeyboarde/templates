{
  "private": true,
  "name": "@templates/lib",
  "description": "{{{Description}}}",
  "author": "{{{git.user.name}}} <{{{git.user.email}}}>",
  "license": "ISC",
  "version": "1.0.0",
  "files": [
    "lib/**"
  ],
  "directories": {
    "lib": "lib"
  },
  "type": "module",
  "types": "lib/esm/index.d.ts",
  "module": "lib/esm/index.js",
  "main": "lib/cjs/index.js",
  "exports": {
    ".": {
      "types": "./lib/esm/index.d.ts",
      "import": "./lib/esm/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "test": "del-cli out && tsc && eslint --max-warnings=0 src --ignore-pattern '__*' && jest --no-cache --passWithNoTests",
    "build": "del-cli lib && tsc -b tsconfig.build.json && echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
    "modernize": "npx npm-check-updates@latest -i --format group"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "rational",
      "rational/warn",
      "rational/prettier"
    ],
    "ignorePatterns": [
      "node_modules",
      "lib",
      "out",
      "dist",
      "*.config.js",
      "*.config.cjs",
      "*rc.js",
      "*rc.cjs"
    ],
    "overrides": [
      {
        "files": [
          "*.cjs"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      },
      {
        "files": [
          "*.js",
          "*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      },
      {
        "extends": [
          "rational/typescript",
          "rational/prettier"
        ],
        "files": [
          "*.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      }
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "eslint-config-rational": "^2.0.9",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "parallel-rc": "^1.0.12",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
