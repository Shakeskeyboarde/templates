{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"]
}
